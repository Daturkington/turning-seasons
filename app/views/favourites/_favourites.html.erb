<div class="container favourites">
  <h2 class="favourites-title">Your Favourite Recipes:</h2>
  <% if current_user.favourites.present? %>
    <ul class="unordered-list">
      <% current_user.favourites.each do |favourite| %>
          <div class="card-product flex-row">
            <%#= cl_image_tag favourite.recipe.photo.key %>
            <div class="card-product-info">
              <div class="card-product-titles">
                <li><%= favourite.recipe.name %></li>
                <li><%= favourite.recipe.author %></li>
              </div>
              <div class="card-product-info-description">
                <li><%= favourite.recipe.description %></li>
              </div>
            </div>
          </div>
      <% end %>
    </ul>
  <% else %>
    <i class="far fa-frown-open"></i>
    <p class="empty">You haven't chosen any favourite recipes yet! <br> Have a look at what's in season here <strong><%= link_to "Recipes", recipes_path %></strong></p>
  <% end %>
</div>
