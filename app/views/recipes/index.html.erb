  <h1>Month</h1>
  <h2>Recipes</h2>
</div>
<div class="ingredient-options flex-inline">
  <h2>Search by ingredient</h2>
  <div class="ingredient-dropdown">
    <i class="fas fa-plus-circle dropdown-toggle" id="ingredientDropdown" data-toggle="dropdown"></i>
      <% @ingredients.each do |ingredient| %>
          <a class="dropdown-item" href="#"><%= ingredient.name %></a>
      <% end %>
  </div>
</div>

