<div class="container">
<div class="index-headings">
  <h1>Month</h1>
  <h2>Recipes</h2>
</div>
<div class="ingredient-options flex-inline">
  <a class="nav-link" data-toggle="dropdown" href="#">Search by ingredient <i class="fas fa-plus-circle" id="ingredientDropdown"></i></a>
  <div class="dropdown-menu">
    <% @ingredients.each do |ingredient| %>
      <% if ingredient.season ==  Date.today.strftime("%B").downcase%>
        <a href="#"><%= ingredient.name %>, </a>
      <% end %>
    <% end %>
  </div>
</div>

<div class="container-index d-flex justify-content-around flex-row">
  <div class="container-recipes">
    <div class="row">
      <% @recipes.each do |recipe| %>
        <a href='#'>
          <div class="card flex-column">
            <%# <div class="card-image" style="background-image: ..."></div> %>
            <div class="card-description">
              <p><%= recipe.name %> <%= recipe.description %> <%= recipe.author %></p>
            </div>
          </div>
        </a>
      <% end %>
    </div>
  </div>

  <div class="container-shopping-list">
    <h2>Shopping List</h2>
      <ul class="list-inline flex-row">
        <li>
          <i class="fas fa-location-arrow"></i>
        </li>
        <li>
          <i class="far fa-check-circle"></i>
        </li>
      </ul>
  </div>
</div>

