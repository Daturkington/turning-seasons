<div class="index-title">
  <h1>Month</h1>
  <h2>Recipes</h2>
</div>
<div class="ingredient-options flex-inline">
  <a class="nav-link" data-toggle="dropdown" href="#">Search by ingredient <i class="fas fa-plus-circle" id="ingredientDropdown"></i></a>
  <div class="dropdown-menu">
    <% @ingredients.each do |ingredient| %>
      <% if ingredient.season ==  Date.today.strftime("%B").downcase%>
        <a href="#"><%= ingredient.name %>, </a>
      <% end %>
    <% end %>
  </div>
</div>

<div class="container-index d-flex flex-column">
  <div class="container-recipes">
    <div class="row">
      <% @recipes.each do |recipe| %>
          <div class="card">
            <%# <div class="card-image" style="background-image: ..."></div> %>
            <div class="card-description">
              <p><%= recipe.name %> <%= recipe.description %> <%= recipe.author %></p>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <%= render 'recipe_form' %>
      </div>
    </div>
  </div>
</div>
